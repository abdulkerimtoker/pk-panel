        <class>toker.warbandscripts.panel.entity.Item</class>
        <class>toker.warbandscripts.panel.entity.ItemType</class>
        <class>toker.warbandscripts.panel.entity.Book</class>
        <class>toker.warbandscripts.panel.entity.BookPage</class>
        <class>toker.warbandscripts.panel.entity.Chest</class>
        <class>toker.warbandscripts.panel.entity.ChestSlot</class>
        <class>toker.warbandscripts.panel.entity.Door</class>
        <class>toker.warbandscripts.panel.entity.DoorKey</class>
        <class>toker.warbandscripts.panel.entity.Faction</class>
        <class>toker.warbandscripts.panel.entity.Inventory</class>
        <class>toker.warbandscripts.panel.entity.NoticeBoard</class>
        <class>toker.warbandscripts.panel.entity.NoticeBoardAccess</class>
        <class>toker.warbandscripts.panel.entity.NoticeBoardEntry</class>
