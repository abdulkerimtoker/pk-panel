        <class>toker.warbandscripts.panel.entity.CraftingStation</class>
        <class>toker.warbandscripts.panel.entity.IpRecord</class>
        <class>toker.warbandscripts.panel.entity.ServerConfiguration</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/pax"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
